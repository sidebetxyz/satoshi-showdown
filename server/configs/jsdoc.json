{
  "source": {
    "include": [
      "server.js",
      "controllers",
      "models",
      "routes",
      "services",
      "utils"
    ],
    "exclude": ["node_modules"],
    "includePattern": ".+\\.js(doc|x)?$",
    "excludePattern": "(^|\\/|\\\\)_"
  },
  "plugins": ["plugins/markdown"],
  "opts": {
    "encoding": "utf8",
    "destination": "../docs",
    "recurse": true,
    "verbose": true,
    "readme": "../README.md"
  },
  "templates": {
    "cleverLinks": false,
    "monospaceLinks": false,
    "default": {
      "outputSourceFiles": true,
      "includeDate": false
    }
  }
}
